<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import com.teammj.view.components.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="root" minWidth="1280" minHeight="800" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teammj.controller.Main">
    <children>
        <BorderPane>
            <top>
                <ToolBar prefWidth="${root.width}">
                    <leftItems>
                        <VBox fx:id="loadVbox">
                            <ImageView>
                                <image>
                                    <Image url="icons/open-folder.png" />
                                </image>
                            </ImageView>
                            <Label style="-fx-padding: 0 0 0 5">
                                Load
                            </Label>
                        </VBox>
                        <VBox>
                            <ImageView>
                                <image>
                                    <Image url="icons/save-file-option.png" />
                                </image>
                            </ImageView>
                            <Label style="-fx-padding: 0 0 0 8">
                                Save
                            </Label>
                        </VBox>
                    </leftItems>
                    <rightItems>
                        <Label>
                            Ozlympics
                        </Label>
                    </rightItems>
                </ToolBar>
            </top>
            <left>

            </left>
            <bottom>
                <VBox>
                    <HBox>

                    </HBox>
                </VBox>
            </bottom>
        </BorderPane>
    </children>

</AnchorPane>