<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import com.teammj.view.components.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TableView?>
<AnchorPane fx:id="root" minWidth="1280" minHeight="800" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teammj.controller.Main">
    <children>
        <BorderPane>
            <top>
                <ToolBar prefWidth="${root.width}">
                    <leftItems>
                        <VBox fx:id="loadVbox">
                            <ImageView>
                                <image>
                                    <Image url="icons/open-folder.png" />
                                </image>
                            </ImageView>
                            <Label style="-fx-padding: 0 0 0 5">
                                Load
                            </Label>
                        </VBox>
                        <VBox onMouseClicked="#saveFile">
                            <ImageView>
                                <image>
                                    <Image url="icons/save-file-option.png" />
                                </image>
                            </ImageView>
                            <Label style="-fx-padding: 0 0 0 8">
                                Save
                            </Label>
                        </VBox>
                    </leftItems>
                    <rightItems>
                        <VBox onMouseClicked="#exit">
                            <ImageView>
                                <image>
                                    <Image url="icons/exit.png" />
                                </image>
                            </ImageView>
                            <Label style="-fx-padding: 0 0 0 8">
                                Exit
                            </Label>
                        </VBox>
                    </rightItems>
                </ToolBar>
            </top>
            <left>
                <VBox styleClass="border-property-left" style="-fx-padding: 0 5px 0 0">
                    <Label styleClass="subhead" alignment="CENTER">
                        Persons
                    </Label>
                    <TableView fx:id="tblViewPersons" prefHeight="${root.height - 300}" editable="true"/>
                </VBox>
            </left>
            <center>
                <AnchorPane fx:id="centerPane">
                    <VBox>
                        <Label styleClass="subhead" prefWidth="${centerPane.width}" alignment="CENTER">
                            Games
                        </Label>
                        <HBox styleClass="border-property-center">
                            <TableView fx:id="tblViewGames" prefHeight="${root.height - 300}"/>
                            <TableView fx:id="tblViewGame" prefHeight="${root.height - 300}"/>
                        </HBox>
                    </VBox>
                </AnchorPane>
            </center>
            <bottom>
                <VBox>
                    <HBox>

                    </HBox>
                </VBox>
            </bottom>
        </BorderPane>
    </children>

</AnchorPane>